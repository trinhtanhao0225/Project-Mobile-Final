<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Bên trái: icon + loại voucher -->
        <LinearLayout
            android:id="@+id/leftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_password"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo hiểm Ô tô"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Nội dung voucher -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leftIcon"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_alignTop="@id/leftIcon">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn 20%"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tối đa 100K"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvExpireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HSD: 30/06/2025"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <!-- "Dùng ngay" căn phải -->
            <TextView
                android:id="@+id/btnUseNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dùng ngay"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
